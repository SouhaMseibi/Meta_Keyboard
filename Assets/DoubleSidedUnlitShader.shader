Shader "Custom/DoubleSidedUnlitShader"
{
    Properties
    {
        _Color ("Main Color", Color) = (0,0,1,1) // Blue color (RGBA)
        _MainTex ("Base (RGB)", 2D) = "blue" {}
    }
    SubShader
    {
        Tags { "Queue"="Geometry" }
        LOD 100

        Pass
        {
            // Turn off backface culling
            Cull Off

            CGPROGRAM
            #pragma vertex vert
            #pragma fragment frag

            #include "UnityCG.cginc"

            struct appdata
            {
                float4 vertex : POSITION;
                float2 uv : TEXCOORD0;
            };

            struct v2f
            {
                float2 uv : TEXCOORD0;
                float4 vertex : SV_POSITION;
            };

            sampler2D _MainTex;
            float4 _MainTex_ST;

            v2f vert (appdata v)
            {
                v2f o;
                o.vertex = UnityObjectToClipPos(v.vertex);
                o.uv = TRANSFORM_TEX(v.uv, _MainTex);
                return o;
            }

            fixed4 frag (v2f i) : SV_Target
            {
                // Sample the texture
                fixed4 col = tex2D(_MainTex, i.uv);
                return col;
            }
            ENDCG
        }
    }
    FallBack "Diffuse"
}
